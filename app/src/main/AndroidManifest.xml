<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikoleta.coinz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.location.gps" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coinz_logo"
        android:label="Coinz"
        android:roundIcon="@drawable/coinz_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MapActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="Coinz"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".NewPasswordActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".ProfileScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".GameRulesActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".UsernameActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".Wallet"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".Bank"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".SelectUserActivity"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".SelectCoinGiftsActivity"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".NotificationsActivity"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".Piggybank"
            android:theme="@style/Dialog_Full_Width" />
        <activity android:name=".BoostersActivity" />
        <activity
            android:name=".MagnetActivity"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".StealActivity"
            android:theme="@style/Dialog_Full_Width" />
        <activity
            android:name=".ShieldActivity"
            android:theme="@style/Dialog_Full_Width" />
    </application>

</manifest>